<% provide(:title, 'クイズ投稿一覧') %>
<h1>投稿一覧</h1>
<div class="row">
<ol class="col-lg-8 offset-md-2 list-group">
  <% @posts.each do |post| %>
    <li class="list-group-item list-group-item-action flex-column align-items-start">
      <%= image_tag post.user.image.url(:thumb) if post.user.image? %>
      <%= link_to post.user.name, "users/#{post.user.id}" %>
      <p><%= post.content %></p>
      <p><%= image_tag post.image.url if post.image? %></p>
      投稿 <%= time_ago_in_words(post.created_at) %> 前
      <%= link_to "詳細", post_path(post) %>
    </li>
  <% end %>
</ol>
</div>
<%= will_paginate @posts, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>