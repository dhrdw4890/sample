<% provide(:title, "ログイン") %>
<h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control mb-4' %>

      <%= f.submit "ログイン", class: "btn btn-outline-primary mb-4" %>
    <% end %>

    <p>始めての方 <%= link_to "新規登録はこちら", signup_path %></p>
  </div>
</div>